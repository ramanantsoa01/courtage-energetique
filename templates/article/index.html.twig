{% extends 'base.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block body %}

    <header class="container-fluid py-5" style="background-image: url('build/images/actualite-header.jpg'); background-size: cover; background-position: center; height: 600px; opacity: 10px;">
        <div class="row justify-content-center text-center text-white" style="height: 100%;">
            <div class="col-lg-8 col-md-10 col-sm-12" style="margin-top: 15%;">
                <h1 class="fw-bold display-4 title-responsive">RESTEZ INFORMÉ SUR LES ÉVOLUTIONS DU MARCHE DE L'ENERGIE</h1>
                <p class="mt-3 lead paragraph-responsive">Les experts en courtage partagent des analyses, des conseils et des tendances pour faire les meilleurs choix énergétiques.</p>
            </div>
        </div>
    </header>   

    <div class="container mt-5">
    <div class="row">
        <h1 class="mb-4 text-center">LES DERNIERS ARTICLES</h1>
        {% for articles in article %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 " style="border-radius: 30px;">
                    {% if articles.images %}
                        <img src="{{ asset('uploads/images/' ~ articles.images) }}" class="card-img-top mb-3" alt="{{ articles.name }}" style="max-width: 100%; height: auto; border-radius: 20 0;">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title fw-bold text-center mb-3">{{ articles.name }}</h5>
                        <p class="card-text fw-normal">{{ articles.extrait }}</p>
                        <div class="d-flex align-items-center">
                            <span class="ms-auto text-muted">Publiée le {{ articles.createdAt|date('d-m-Y') }}</span>
                        </div>
                        {# <button type="button" class="btn btn-primary" style="text-align: center;">Voir plus</button> #}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
