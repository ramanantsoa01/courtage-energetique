{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
    
    <header class="container-fluid py-5 mt-5" style="background-image: url('build/images/contact-header.jpg'); background-size: cover; background-position: center; height: 600px;">
        <div class="row justify-content-center text-center text-black" style="height: 100%;">
            <div class="col-lg-8 col-md-10 col-sm-12" style="margin-top: 15%;">
                <h1 class="fw-bold display-4 title-responsive">CONTACTEZ-NOUS</h1>
                <p class="mt-3 lead paragraph-responsive">Prenez contact avec nos experts pour trouver des solutions énergétiques adaptées à votre entreprise.</p>
            </div>
        </div>
    </header>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="col-lg-4 col-md-6 col-sm-8 mb-3">
                    <div class="card bg-dark text-white h-100 shadow-sm" style="width: 400px; margin: auto;border-radius: 20px;">
                        <div class="card-body text-center">
                            <i class="fas fa-phone fa-2x mb-3"></i>
                            <h5 class="card-title fw-bold">Numéro de Téléphone</h5>
                            <p class="card-text">+33 1 23 45 67 89</p>
                        </div>
                    </div>
                </div>

                <!-- Card: Email -->
                <div class="col-lg-4 col-md-6 col-sm-8 mb-3">
                    <div class="card bg-dark text-white h-100 shadow-sm" style="width: 400px; margin: auto;border-radius: 20px;">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope fa-2x mb-3"></i>
                            <h5 class="card-title fw-bold">Email</h5>
                            <p class="card-text">contact@courtier-energie.com</p>
                        </div>
                    </div>
                </div>

                <!-- Card: Localisation -->
                <div class="col-lg-4 col-md-6 col-sm-8 mb-3">
                    <div class="card bg-dark text-white h-100 shadow-sm" style="width: 400px; margin: auto;border-radius: 20px;">
                        <div class="card-body text-center">
                            <i class="fas fa-map-marker-alt fa-2x mb-3"></i>
                            <h5 class="card-title fw-bold">Localisation</h5>
                            <p class="card-text">Paris, France - 75000</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="p-4" style="background-color: #e0f4e6; height: 453px; border-radius: 20px;"> 
                {{ form_start(form) }}
                    <div class="form-group mb-2">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': ''
                            }
                        }) }}
                    </div>

                    <div class="form-group mb-2">
                        {{ form_label(form.email, 'E-mail') }}
                        {{ form_widget(form.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': ''
                            }
                        }) }}
                    </div>

                    <div class="form-group mb-2">
                        {{ form_label(form.message, 'Message') }}
                        {{ form_widget(form.message, {
                            'attr': {
                                'class': 'form-control',
                                'rows': '5',
                                'placeholder': ''
                            }
                        }) }}
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary rounded w-50 py-2 mt-2" type="submit">Envoyer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        </div>
        
    </div>

    
{% endblock %}
